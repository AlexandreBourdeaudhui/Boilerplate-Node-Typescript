{
  "name": "ProjectName",
  "version": "0.0.0-dev",
  "main": "dist/server.js",
  "author": "Alexandre Bourdeaud'hui <alexandre.bourdeaudhui@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon src/server.ts --exec ts-node",
    "start": "NODE_ENV=production DEBUG=*:error node dist/server.js",
    "build": "babel src -d dist",
    "test": "test(){ if [ -z $1 ]; then NODE_ENV=test mocha --exit tests/.setup.js 'tests/**/*.test.js'; else NODE_ENV=test mocha --exit tests/.setup.js $1 $2; fi; }; test",
    "lint": "eslint --fix '{src,tests}/**/*.{js,ts,tsx,jsx}'",
    "pretty": "prettier --write '{src,tests}/**/*.{js,ts,tsx,jsx}'",
    "launch": "node --require ts-node $1",
    "fixtures": "node tasks/fixtures/index.js --exec ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "debug": "^4.1.1",
    "express": "^4.16.3",
    "helmet": "^3.12.0",
    "http-status": "^1.0.1",
    "mongoose": "^5.0.9",
    "morgan": "^1.9.0",
    "serve-static": "^1.13.2"
  },
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/helmet": "0.0.46",
    "@types/mongoose": "^5.3.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
